# Enable URL rewriting
<IfModule mod_rewrite.c>
  RewriteEngine On
  # Base URL (update if your site is in a sub-folder)
  RewriteBase /

  # ------------------------------------------------------------
  # 1. Serve files / directories that actually exist
  # ------------------------------------------------------------
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # ------------------------------------------------------------
  # 2. All other requests are routed to index.html so that the
  #    client-side router (e.g. React-Router) can handle them.
  # ------------------------------------------------------------
  RewriteRule ^ index.html [L]
</IfModule>

